{
  "name": "Tiempo de Descarga",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "logo34.png"
  },
  "icons": {
    "34": "logo34.png",
    "48": "logo48.png",
    "96": "logo96.png",
    "128": "logo128.png",
    "512": "logo512.png"
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
